{
  "title" : "Choice",
  "type"  : "object",
  "additionalProperties" : false,
  "required" : ["answer", "answerId"],
  "defaultProperties": ["answer", "answerId"],
  "properties"    :   {
    "answerId" : {
      "title" : "Id",
      "minLength" : 1,
      "pattern" : "^[a-zA-Z0-9_]+$",
      "optional" : false,
      "propertyOrder": 1,
      "description" : "Answer id",
      "type" : "string"
    },
    "answer" : {
      "title" : "Answer",
      "propertyOrder": 2,
      "$ref" : "dist/language.json"
    },
    "help"  : {
      "title" : "Help",
      "propertyOrder": 3,
      "$ref" : "dist/language.json"
    },
    "pointsFactor" : {
      "title" : "Points factor",
      "propertyOrder": 4,
      "type" : "number"
    },
    "additionalQuestionIds" : {
      "title" : "Additional question Ids",
      "type" : "array",
      "propertyOrder": 5,
      "items" : {
        "type" : "string"
      }
    },
    "ifChoseSectionIds" : {
      "title" : "If chosen section Ids",
      "propertyOrder": 6,
      "type" : "array",
      "items" : {
        "type" : "string"
      }
    },
    "ifChosen" : {
      "title" : "If chosen",
      "propertyOrder": 7,
      "type" : "array",
      "items": {
        "$ref" : "dist/question.json"
      }
    }
  }
}